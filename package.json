{
  "name": "cindyzody-site",
  "version": "1.0.0",
  "private": true,
  "type": "module",
  "scripts": {
    "dev": "concurrently \"npm run dev:server\" \"npm run dev:client\"",
    "dev:client": "vite",
    "dev:server": "node --watch server/index.js",
    "build": "vite build",
    "start": "NODE_ENV=production node server/index.js",
    "preview": "npm run build && npm run start",
    "test": "playwright test",
    "test:unit": "vitest run --config server/vitest.config.js",
    "test:unit:watch": "vitest --config server/vitest.config.js",
    "test:unit:coverage": "vitest run --config server/vitest.config.js --coverage",
    "test:ui": "playwright test --ui",
    "test:headed": "playwright test --headed",
    "test:debug": "playwright test --debug",
    "ios:build": "npm run build && npx cap sync ios",
    "ios:open": "npx cap open ios",
    "ios:run": "npm run ios:build && npx cap run ios",
    "generate-icons": "node scripts/generate-icons.js"
  },
  "dependencies": {
    "@capacitor/app": "^8.0.0",
    "@capacitor/browser": "^8.0.0",
    "@capacitor/core": "^8.0.1",
    "@capacitor/ios": "^8.0.1",
    "@capacitor/keyboard": "^8.0.0",
    "@capacitor/splash-screen": "^8.0.0",
    "@clerk/backend": "^2.29.4",
    "@clerk/clerk-js": "^5.119.1",
    "@clerk/vue": "^1.17.7",
    "@headlessui/vue": "^1.7.22",
    "@heroicons/vue": "^2.1.5",
    "@tailwindcss/forms": "^0.5.10",
    "@tailwindcss/typography": "^0.5.16",
    "better-sqlite3": "^12.6.0",
    "cookie-parser": "^1.4.7",
    "cors": "^2.8.5",
    "dotenv": "^17.2.3",
    "express": "^4.21.0",
    "express-rate-limit": "^8.2.1",
    "html2pdf.js": "^0.14.0",
    "resend": "^6.7.0",
    "vue": "^3.4.31",
    "vue-router": "^4.3.2"
  },
  "devDependencies": {
    "@capacitor/cli": "^8.0.1",
    "@playwright/test": "^1.57.0",
    "@types/cookie-parser": "^1.4.10",
    "@types/cors": "^2.8.19",
    "@types/express": "^5.0.6",
    "@types/node": "^25.0.10",
    "@vitejs/plugin-vue": "^5.0.5",
    "@vitest/coverage-v8": "^4.0.18",
    "autoprefixer": "^10.4.19",
    "concurrently": "^9.0.1",
    "pdf-lib": "^1.17.1",
    "postcss": "^8.4.41",
    "puppeteer": "^24.35.0",
    "sharp": "^0.34.5",
    "tailwindcss": "^3.4.10",
    "tsx": "^4.21.0",
    "typescript": "^5.9.3",
    "vite": "^6.4.1",
    "vitest": "^4.0.18"
  }
}
